@using MvcCv.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            
            <td><a class="btn btn-danger" href="/Admin/AdminDuzenle/@x.ID">Düzenle</a></td>
            <td><a class="btn btn-primary" href="/Admin/AdminSil/@x.ID">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-default"> Yeni Kullanıcı Ekle </a>